{% extends 'layouts/main.html.twig' %}

{% block body_class %}plans{% endblock %}

{# SEO #}
{% set page = 'plans' %}
{% block meta %}{% endblock %}
{% block page_title %}{{ app.meta[page].title }}{% endblock %}
{% block meta_description %}{{ app.meta[page].description }}{% endblock %}
{% block meta_keywords %}{{ app.meta[page].keywords }}{% endblock %}

{# force app locale when creating wiz #}
{% if app['country'] == 'fr' %}
    {% set localeapp = 'fr' %}
{% elseif app['country'] == 'it' %}
    {% set localeapp = 'it' %}
{% else %}
    {% set localeapp = 'en' %}
{% endif %}


