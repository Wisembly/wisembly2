{% extends 'layouts/main.html.twig' %}

{# Load team DataSet #}
{% block team %}{% endblock %}

{% block body_class %}about-team{% endblock %}

{% block content %}
	<div class='section header' background-image: url();>
		<div class='container'>
			<h1>{{ 'about_team_page_title' | trans }}</h1>
			<h2>{{ 'about_team_page_desc' | trans }}</h2>
		</div>
	</div>
	<div class='section'>
		<div class='container'>
			<div class='row'>
				<div class='column three'>
					{% include 'includes/about-navigation.html.twig' %}
				</div>
				<div class='column eight last'>
					<div class='column-inner'>
						<ul class='list team-list'>

                            {% for member in app.team %}
							<li>
								<div class='person'>
									<div class='img'>
										<img src='{{ member.main_pic }}'>
									</div>
									<div class='name'>{{ member.name }}</div>
									<div class='role'>{{ member.job }}</div>
								</div>
							</li>
                            {% endfor %}

						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}