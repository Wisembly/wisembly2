{% extends 'layouts/main.html.twig' %}

{# Load history DataSet #}
{% block history %}{% endblock %}

{% block body_class %}about{% endblock %}

{% block content %}
	<div class='section header' background-image: url();>
		<div class='container'>
			<h1>A propos de Wisembly</h1>
			<h2>Comment cette belle histoire a commenc√©...</h2>
		</div>
	</div>
	<div class='section'>
		<div class='container'>
			<div class='row'>
				<div class='column three'>
					{% include 'includes/about-navigation.html.twig' %}
				</div>
				<div class='column eight last'>
					<div class='column-inner'>
						<div class='history-stream'>
							<b class='history-stream-line'></b>

                            {% for history in app.history %}
                                <div class='history-item'>
    								<b class='history-item-dot'></b>
    								<div class='history-item-cover'>
    									<i class='history-item-background' style='background-image: url({{ history.image }})'></i>
    									<div class='history-item-id'>
    										<span class='history-item-date'>{{ history.date }}</span>
    										<h3 class='history-item-title'>{{ history.title }}</h3>
    									</div>
    								</div>
    								<div class='history-item-description'>
    									{{ history.description | raw }}
    								</div>
    							</div>
                            {% endfor %}

                        </div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}