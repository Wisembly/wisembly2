{% extends 'layouts/main.html.twig' %}

{# load features localization keys #}
{% block features_meeting %}{% endblock %}

{% block body_class %}meetings-confcalls{% endblock %}

{# SEO #}
{% set page = 'meetings_confcalls' %}
{% block meta %}{% endblock %}
{% block page_title %}{{ app.meta[page].title }}{% endblock %}
{% block meta_description %}{{ app.meta[page].description }}{% endblock %}
{% block meta_keywords %}{{ app.meta[page].keywords }}{% endblock %}


{% block content %}
	<div class='section header' style='background-image: url(http://cdn2.stocksy.com/a/RqI000/z0/72443.jpg);'>
		<div class='container'>
			<div class='row'>
				<div class='column'>
					<div class='column-inner'>
						<div class='id'>
							<h1><span>{{ 'meeting_confcalls_title' | trans }}</span></h1>
							<h2><span>{{ 'meeting_confcalls_desc' | trans }}</span></h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="features-list-container">
		<div class='section features-list' data-spy='affix' data-offset-top='460'>
			<div class='container spy-list'>
				<ul class='nav list'>
					<li class='one first active'>
						<a href='#schedule'>
							<i class='picto picto-agenda'></i>
							<span class='short'>{{ 'schedule_link' | trans }}</span>
						</a>
					</li>
					<li class='two'>
						<a href='#document-sharing'>
							<i class='picto picto-document-sharing'></i>
							<span>{{ 'documents_link' | trans }}</span>
						</a>
					</li>
					<li class='three'>
						<a href='#questions-ideas'>
							<i class='picto picto-participation'></i>
							<span>{{ 'questions_and_ideas_link' | trans }}</span>
						</a>
					</li>
					<li class='four'>
						<a href='#decision-taking'>
							<i class='picto picto-votes'></i>
							<span class='medium'>{{ 'decision_taking_link' | trans }}</span>
						</a>
					</li>
					<li class='five'>
						<a href='#feedback-survey'>
							<i class='picto picto-satisfaction-study'></i>
							<span class='medium'>{{ 'feedback_survey_link' | trans }}</span>
						</a>
					</li>
					<li class='six'>
						<a href='#stats-reporting'>
							<i class='picto picto-stats-reporting'></i>
							<span>{{ 'statistics_link' | trans }}</span>
						</a>
					</li>
					<li class='seven'>
						<a href='#multi-devices'>
							<i class='picto picto-multi-devices'></i>
							<span class='short'>{{ 'multi_devices_link' | trans }}</span>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div class='section' id='schedule'>
		<div class='container'>
			<div class='row'>
				<div class='column five'>
					<div class='column-inner'>
						<h3>{{ 'schedule_meetings_title' | trans }}</h3>
						{{ 'schedule_meetings_desc' | trans | raw }}
					</div>
				</div>
				<div class='column six last'>
					<div class='column-inner'>
						<img src='/static/images/illustrations/agenda.png'>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='section' id='document-sharing'>
		<div class='container'>
			<div class='row'>
				<div class='column six'>
					<div class='column-inner'>
						<img src='/static/images/illustrations/managing-documents.png'>
					</div>
				</div>
				<div class='column six last'>
					<div class='column-inner'>
						<h3>{{ 'documents_title' | trans }}</h3>
						<div class='row'>
							<div class='column six'>
								<div class='column-inner'>
									<p>{{ 'documents_desc1' | trans }}</p>
								</div>
							</div>
							<div class='column six last'>
								<div class='column-inner'>
									<p>{{ 'documents_desc2' | trans }}</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='section try-now'>
		<div class='container'>
			<div class='row'>
				<div class='column three last'>
					<div class='column-inner'>
						<a href='{{ path('plans') }}' class='button button-large button-attention'>{{ 'try_for_free' | trans }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='section' id='questions-ideas'>
		<div class='container'>
			<div class='row'>
				<div class='column six'>
					<div class='column-inner'>
						<h3>{{ 'questions_and_ideas_title' | trans }}</h3>
						<div class='row'>
							<div class='column six'>
								<div class='column-inner'>
									{{ 'questions_and_ideas_desc1' | trans | raw }}
								</div>
							</div>
							<div class='column six'>
								<div class='column-inner'>
									{{ 'questions_and_ideas_desc2' | trans | raw }}
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class='column four last'>
					<div class='column-inner'>
						here a quote list
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='section' id='decision-taking'>
		<div class='container'>
			<div class='row'>
				<div class='column six'>
					<div class='column-inner'>
						here a poll
					</div>
				</div>
				<div class='column six last'>
					<div class='column-inner'>
						<h3>{{ 'decision_taking_title' | trans }}</h3>
						<div class='row'>
							<div class='column six'>
								<div class='column-inner'>
									{{ 'decision_taking_desc1' | trans | raw }}
								</div>
							</div>
							<div class='column six'>
								<div class='column-inner'>
									{{ 'decision_taking_desc2' | trans | raw }}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='section try-now'>
		<div class='container'>
			<div class='row'>
				<div class='column three last'>
					<div class='column-inner'>
						<a href='{{ path('plans') }}' class='button button-large button-attention'>{{ 'try_for_free' | trans }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='section' id='feedback-survey'>
		<div class='container'>
			<div class='row'>
				<div class='column six'>
					<div class='column-inner'>
						<img src='/static/images/illustrations/fullfilment-survey.png'>
					</div>
				</div>
				<div class='column five last'>
					<div class='column-inner'>
						<h3>{{ 'feedback_survey_title' | trans }}</h3>
							<div class='row'>
								<div class='column six'>
									<div class='column-inner'>
										<p>{{ 'feedback_survey_desc2' | trans }}</p>
									</div>
								</div>
								<div class='column six last'>
									<div class='column-inner'>
										<p>{{ 'feedback_survey_desc2' | trans }}</p>
										<p>{{ 'feedback_survey_desc3' | trans }}</p>
									</div>
								</div>
							</div>
						</div>
					</div>
			</div>
		</div>
	</div>
	<div class='section' id='stats-reporting'>
		<div class='container'>
			<h3 class='text-centered'>{{ 'statistics_title' | trans }}</h3>
			<div class='illustration'>
				<img src='/static/images/illustrations/stats-reporting-meetings.png' />
			</div>
			<div class='row'>
				<div class='column four'>
					<div class='column-inner'>
						{{ 'statistics_desc_1' | trans | raw }}
					</div>
				</div>
				<div class='column four'>
					<div class='column-inner'>
						{{ 'statistics_desc_2' | trans | raw }}
					</div>
				</div>
				<div class='column four'>
					<div class='column-inner'>
						{{ 'statistics_desc_3' | trans | raw }}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='section' id='multi-devices'>
		<div class='container'>
			<h3 class='text-centered'>{{ 'multi_devices_title' | trans }}</h3>
			<div class='illustration'>
				<img src='/static/images/illustrations/devices.png'>
			</div>
			<div class='row'>
				<div class='column four'>
					<div class='column-inner'>
						{{ 'multi_devices_desc_1' | trans | raw }}
					</div>
				</div>
				<div class='column four'>
					<div class='column-inner'>
						{{ 'multi_devices_desc_2' | trans | raw }}
					</div>
				</div>
				<div class='column four last'>
					<div class='column-inner'>
						{{ 'multi_devices_desc_3' | trans | raw }}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class='section try-now'>
		<div class='container'>
			<div class='row'>
				<div class='column three last'>
					<div class='column-inner'>
						<a href='{{ path('plans') }}' class='button button-large button-attention'>{{ 'try_for_free' | trans }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
