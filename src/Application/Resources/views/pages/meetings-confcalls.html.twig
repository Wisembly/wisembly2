{% extends 'layouts/main.html.twig' %}

{# load features localization keys #}
{% block features_meeting %}{% endblock %}

{% block body_class %}meetings-confcalls{% endblock %}

{# SEO #}
{% set page = 'meetings_confcalls' %}
{% block meta %}{% endblock %}
{% block page_title %}{{ app.meta[page].title }}{% endblock %}
{% block meta_description %}{{ app.meta[page].description }}{% endblock %}
{% block meta_keywords %}{{ app.meta[page].keywords }}{% endblock %}


{% block content %}
	<div class='section odd header'>
		<div class='header-background'>
			<img class='bg' src='{{ asset("/static/images/meetings.jpg") }}'>
		</div>
		<div class='container'>
			<div class='row'>
				<div class='column twelve'>
					<div class='column-inner'>
						<div class='id'>
							<h1><span>{{ 'meeting_confcalls_title' | trans }}</span></h1>
							<h2><span>{{ 'meeting_confcalls_desc' | trans }}</span></h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="features-list-container">
		<div class='section even features-list' data-spy='affix' data-offset-top='460'>
			<div class='container spy-list'>
				<ul class='nav list'>
					<li class='one first active'>
						<a href='{{ app.request.uri }}#schedule' class='scroll' data-target='#schedule'>
							<i class='picto picto-agenda'></i>
							<span class='short'>{{ 'schedule_link' | trans }}</span>
						</a>
					</li>
					<li class='two'>
						<a href='{{ app.request.uri }}#document-sharing' 	class='scroll' data-target='#document-sharing'>
							<i class='picto picto-document-sharing'></i>
							<span>{{ 'documents_link' | trans }}</span>
						</a>
					</li>
					<li class='three'>
						<a href='{{ app.request.uri }}#questions-ideas' class='scroll' data-target='#questions-ideas'>
							<i class='picto picto-participation'></i>
							<span>{{ 'questions_and_ideas_link' | trans }}</span>
						</a>
					</li>
					<li class='four'>
						<a href='{{ app.request.uri }}#decision-taking' class='scroll' data-target='#decision-taking'>
							<i class='picto picto-votes'></i>
							<span class='medium'>{{ 'decision_taking_link' | trans }}</span>
						</a>
					</li>
					<li class='five'>
						<a href='{{ app.request.uri }}#feedback-survey' class='scroll' data-target='#feedback-survey'>
							<i class='picto picto-satisfaction-study'></i>
							<span class='medium'>{{ 'feedback_survey_link' | trans }}</span>
						</a>
					</li>
					<li class='six'>
						<a href='{{ app.request.uri }}#stats-reporting' class='scroll' data-target='#stats-reporting'>
							<i class='picto picto-stats-reporting'></i>
							<span>{{ 'statistics_link' | trans }}</span>
						</a>
					</li>
					<li class='seven'>
						<a href='{{ app.request.uri }}#multi-devices' class='scroll' data-target='#multi-devices'>
							<i class='picto picto-multi-devices'></i>
							<span class='short'>{{ 'multi_devices_link' | trans }}</span>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
    {% include 'includes/features/meetings/schedule.html.twig' %}
    {% include 'includes/features/meetings/document-sharing.html.twig' %}
    {% include 'includes/features/try-now.html.twig' %}
    {% include 'includes/features/meetings/questions-ideas.html.twig' %}
    {% include 'includes/features/meetings/decision-taking.html.twig' %}
    {% include 'includes/features/try-now.html.twig' %}
    {% include 'includes/features/meetings/feedback-survey.html.twig' %}
    {% include 'includes/features/meetings/stats-reporting.html.twig' %}
    {% include 'includes/features/meetings/multi-devices.html.twig' %}
    {% include 'includes/features/try-now.html.twig' %}
{% endblock %}